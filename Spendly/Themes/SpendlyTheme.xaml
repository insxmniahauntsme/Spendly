<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- BASE BACKGROUNDS -->

    <!-- Sidebar -->
    <Color x:Key="Spendly.SidebarBg">#111118</Color>

    <!-- Main page background -->
    <Color x:Key="Spendly.MainBg">#17171E</Color>

    <!-- Cards / Panels -->
    <Color x:Key="Spendly.CardBg">#1E1E28</Color>
    
    <!-- Buttons -->
    <Color x:Key="Spendly.HoverBg">#1A1A28</Color>
    <Color x:Key="Spendly.PressedBg">#252535</Color>


    <!-- BORDERS -->
    <Color x:Key="Spendly.Border">#2A2A38</Color>
    
    
    <!-- TEXT COLORS -->

    <!-- Main white-ish text -->
    <Color x:Key="Spendly.TextPrimary">#E8E8F0</Color>

    <!-- Muted gray-blue text -->
    <Color x:Key="Spendly.TextMuted">#8888AA</Color>


    <!-- ACCENTS -->

    <Color x:Key="Spendly.Primary">#6C63FF</Color>
    <Color x:Key="Spendly.PrimaryLight">#8780FF</Color>
    <Color x:Key="Spendly.Success">#43D9A2</Color>
    <Color x:Key="Spendly.Danger">#FF6584</Color>
    <Color x:Key="Spendly.Warning">#FFC94D</Color>
    
    <Color x:Key="Spendly.Primary.A60">#996C63FF</Color>
    <Color x:Key="Spendly.Primary.A10">#1A6C63FF</Color>

    <Color x:Key="Spendly.Success.A60">#9943D9A2</Color>
    <Color x:Key="Spendly.Success.A10">#1A43D9A2</Color>

    <Color x:Key="Spendly.Danger.A60">#99FF6584</Color>
    <Color x:Key="Spendly.Danger.A10">#1AFF6584</Color>

    <Color x:Key="Spendly.Warning.A60">#99FFC94D</Color>
    <Color x:Key="Spendly.Warning.A10">#1AFFC94D</Color>

    <Color x:Key="Spendly.TextMuted.A60">#998888AA</Color>
    <Color x:Key="Spendly.TextMuted.A10">#1A8888AA</Color>

    
    <!-- TRANSPARENT OVERLAYS -->

    <Color x:Key="Spendly.NeutralOverlay">#202A2A38</Color>
    <Color x:Key="Spendly.PrimaryOverlay">#126C63FF</Color>
    <Color x:Key="Spendly.SuccessOverlay">#2643D9A2</Color>
    <Color x:Key="Spendly.WarningOverlay">#26FFC94D</Color> 
    <Color x:Key="Spendly.DangerOverlay">#26FF6584</Color>

    
    <!-- BRUSHES -->
    
    <!-- Solid color brushes -->
    <SolidColorBrush x:Key="Brush.SidebarBg" Color="{StaticResource Spendly.SidebarBg}" />
    <SolidColorBrush x:Key="Brush.MainBg" Color="{StaticResource Spendly.MainBg}" />
    <SolidColorBrush x:Key="Brush.CardBg" Color="{StaticResource Spendly.CardBg}" />
    <SolidColorBrush x:Key="Brush.HoverBg" Color="{StaticResource Spendly.HoverBg}" />
    <SolidColorBrush x:Key="Brush.PressedBg" Color="{StaticResource Spendly.PressedBg}" />

    <SolidColorBrush x:Key="Brush.Border" Color="{StaticResource Spendly.Border}" />

    <SolidColorBrush x:Key="Brush.TextPrimary" Color="{StaticResource Spendly.TextPrimary}" />
    <SolidColorBrush x:Key="Brush.TextMuted" Color="{StaticResource Spendly.TextMuted}" />

    <SolidColorBrush x:Key="Brush.Primary" Color="{StaticResource Spendly.Primary}" />
    <SolidColorBrush x:Key="Brush.PrimaryLight" Color="{StaticResource Spendly.PrimaryLight}"/>
    <SolidColorBrush x:Key="Brush.Success" Color="{StaticResource Spendly.Success}" />
    <SolidColorBrush x:Key="Brush.Danger" Color="{StaticResource Spendly.Danger}" />
    <SolidColorBrush x:Key="Brush.Warning" Color="{StaticResource Spendly.Warning}" />
    
    <SolidColorBrush x:Key="Brush.Primary.A60" Color="{StaticResource Spendly.Primary.A60}" />
    <SolidColorBrush x:Key="Brush.Primary.A10" Color="{StaticResource Spendly.Primary.A10}" />
    <SolidColorBrush x:Key="Brush.Success.A60" Color="{StaticResource Spendly.Success.A60}" />
    <SolidColorBrush x:Key="Brush.Success.A10" Color="{StaticResource Spendly.Success.A10}" />
    <SolidColorBrush x:Key="Brush.Danger.A60" Color="{StaticResource Spendly.Danger.A60}" />
    <SolidColorBrush x:Key="Brush.Danger.A10" Color="{StaticResource Spendly.Danger.A10}" />
    <SolidColorBrush x:Key="Brush.Warning.A60" Color="{StaticResource Spendly.Warning.A60}" />
    <SolidColorBrush x:Key="Brush.Warning.A10" Color="{StaticResource Spendly.Warning.A10}" />
    <SolidColorBrush x:Key="Brush.TextMuted.A60" Color="{StaticResource Spendly.TextMuted.A60}" />
    <SolidColorBrush x:Key="Brush.TextMuted.A10" Color="{StaticResource Spendly.TextMuted.A10}" />

    <SolidColorBrush x:Key="Brush.NeutralOverlay" Color="{StaticResource Spendly.NeutralOverlay}" />
    <SolidColorBrush x:Key="Brush.PrimaryOverlay" Color="{StaticResource Spendly.PrimaryOverlay}" />
    <SolidColorBrush x:Key="Brush.SuccessOverlay" Color="{StaticResource Spendly.SuccessOverlay}" />
    <SolidColorBrush x:Key="Brush.WarningOverlay" Color="{StaticResource Spendly.WarningOverlay}" />
    <SolidColorBrush x:Key="Brush.DangerOverlay" Color="{StaticResource Spendly.DangerOverlay}" />
    
    <!-- Gradient brushes -->
    <LinearGradientBrush x:Key="Brush.KpiGlow.Primary" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#00000000" Offset="0"/>
        <GradientStop Color="{StaticResource Spendly.Primary}" Offset="0.35"/>
        <GradientStop Color="#00000000" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="Brush.KpiGlow.Success" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#00000000" Offset="0"/>
        <GradientStop Color="{StaticResource Spendly.Success}" Offset="0.35"/>
        <GradientStop Color="#00000000" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="Brush.KpiGlow.Danger" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#00000000" Offset="0"/>
        <GradientStop Color="{StaticResource Spendly.Danger}" Offset="0.35"/>
        <GradientStop Color="#00000000" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="Brush.KpiGlow.Warning" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#00000000" Offset="0"/>
        <GradientStop Color="{StaticResource Spendly.Warning}" Offset="0.35"/>
        <GradientStop Color="#00000000" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="Brush.KpiGlow.Neutral" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#00000000" Offset="0"/>
        <GradientStop Color="{StaticResource Spendly.TextMuted}" Offset="0.35"/>
        <GradientStop Color="#00000000" Offset="1"/>
    </LinearGradientBrush>

    
    <!-- BORDER -->
    
    <Style x:Key="DividerStyle" TargetType="Border">
        <Setter Property="Height" Value="1"/>
        <Setter Property="Background" Value="{StaticResource Brush.Border}"/>
        <Setter Property="Margin" Value="0,8,0,8"/>
    </Style>
    
    <!-- HEADER BUTTONS -->
    <Style x:Key="GradientButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="135"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="5,0,0,0"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontFamily" Value="Sora"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="8">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="{StaticResource Spendly.Primary}" Offset="0"/>
                                <GradientStop Color="{StaticResource Spendly.PrimaryLight}" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="HeaderOutlineButtonStyle" TargetType="Button">
    
        <Setter Property="Width" Value="140"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="Padding" Value="14,0"/>
        <Setter Property="Margin" Value="0, 0, 10, 0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.TextMuted}"/>
        <Setter Property="FontFamily" Value="Sora"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6"
                            SnapsToDevicePixels="True">

                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"/>
                    </Border>

                    <ControlTemplate.Triggers>

                        <!-- Hover -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource Brush.HoverBg}"/>
                            <Setter Property="Foreground" Value="#E8E8F0"/>
                        </Trigger>

                        <!-- Pressed -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource Brush.PressedBg}"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="HeaderOutlineToggleButtonStyle" TargetType="ToggleButton">
        <Setter Property="Width" Value="140"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="Padding" Value="14,0"/>
        <Setter Property="Margin" Value="0, 0, 10, 0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.TextMuted}"/>
        <Setter Property="FontFamily" Value="Sora"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6"
                            SnapsToDevicePixels="True">

                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"/>
                    </Border>

                    <ControlTemplate.Triggers>

                        <!-- Hover -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource Brush.HoverBg}"/>
                            <Setter Property="Foreground" Value="#E8E8F0"/>
                        </Trigger>

                        <!-- Pressed -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource Brush.PressedBg}"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- TYPO -->
    <Style x:Key="H1" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Sora"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.TextPrimary}"/>
    </Style>

    <Style x:Key="H2" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Sora"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.TextPrimary}"/>
    </Style>

    <Style x:Key="Caption" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Sora"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.TextMuted}"/>
    </Style>

</ResourceDictionary>
