<Application x:Class="Spendly.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Spendly.ViewModels"
             xmlns:views="clr-namespace:Spendly.Views">
    <Application.Resources>
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>

                <!-- Material Design Theme -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Dark.xaml"/>

                <!-- Material базові компоненти -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBox.xaml"/>

                <!-- Colors -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.DeepPurple.xaml"/>

                <!-- Custom styles -->
                <ResourceDictionary Source="Themes/SpendlyTheme.xaml"/>
                <ResourceDictionary Source="Themes/SidebarStyles.xaml"/>
                <ResourceDictionary Source="Themes/KpiCardStyle.xaml"/>

            </ResourceDictionary.MergedDictionaries>
            
            <!-- ViewModel → View -->

            <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
                <views:DashboardView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:TransactionsViewModel}">
                <views:TransactionsView/>
            </DataTemplate>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>