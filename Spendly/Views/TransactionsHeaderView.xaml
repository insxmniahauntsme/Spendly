<UserControl x:Class="Spendly.Views.TransactionsHeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Spendly.Controls">
    <Grid Margin="20,20,16,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Transactions"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   VerticalAlignment="Center"/>
        
        <StackPanel Grid.Column="1"
                    Orientation="Horizontal">
            <Button Style="{StaticResource HeaderOutlineButtonStyle}">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <controls:SvgIcon Width="18"
                                      Height="18"
                                      Margin="0,0,8,0"
                                      Source="pack://application:,,,/Resources/Icons/file-report.svg"/>
                    <TextBlock Text="Export CSV" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource GradientButtonStyle}"
                    Content="New"/>
        </StackPanel>
    </Grid>
</UserControl>