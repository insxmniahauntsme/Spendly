<UserControl x:Class="Spendly.Views.Dashboard.DashboardHeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:monthPicker="clr-namespace:Spendly.Controls.MonthPicker">

    <Grid Margin="20,20,16,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Dashboard"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   VerticalAlignment="Center"/>

        <StackPanel Grid.Column="1" Orientation="Horizontal">

            <monthPicker:MonthPicker
                SelectedMonth="{Binding SelectedMonth, Mode=TwoWay}"
                ButtonStyle="{StaticResource HeaderOutlineToggleButtonStyle}"
                NavButtonStyle="{StaticResource MonthPickerNavButtonStyle}" />

            <Button Style="{StaticResource GradientButtonStyle}"
                    Content="Add Transaction"
                    Margin="12,0,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>